#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    int min;
    double money;

    while (cin >> min) {
        if (min <= 800)
            money = min * 0.9;
        else if (min < 1500)
            money = min * 0.9 * 0.9;
        else
            money = min * 0.9 * 0.79;

        cout << fixed << setprecision(1) << money << endl;
    }

    return 0;
}
